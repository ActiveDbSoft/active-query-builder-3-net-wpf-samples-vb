<ComboBox x:Class="Common.CheckableCombobox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:common="clr-namespace:BasicDemo.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:ClassModifier="Friend">
    <ComboBox.ItemTemplate>
        <DataTemplate DataType="common:SelectableItem">
            <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Content}" VerticalContentAlignment="Center"/>
        </DataTemplate>
    </ComboBox.ItemTemplate>
</ComboBox>
