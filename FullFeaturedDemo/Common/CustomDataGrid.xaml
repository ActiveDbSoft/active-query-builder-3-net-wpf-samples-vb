<UserControl x:Class="Common.CustomDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FullFeaturedDemo.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="False"
                  x:Name="DataView" RowHeaderWidth="0" HorizontalGridLinesBrush="#a0a0a0" VerticalGridLinesBrush="Transparent"
                  AlternatingRowBackground="#F9F9F9" ColumnWidth="Auto" AutoGeneratedColumns="DataView_AutoGeneratedColumns" 
                  SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" >
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <EventSetter Event="Click" Handler="HeaderColumn_OnClick"/>
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="{x:Type local:HeaderData}">
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="0"/>

                                    <StackPanel Grid.Column="1" Visibility="{Binding ShowSortBlock, FallbackValue={x:Static Visibility.Hidden}}">
                                        <Polyline Fill="Black" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased" Visibility="{Binding UpArrowVisible}">
                                            <Polyline.Points>
                                                <Point X="0" Y="5"/>
                                                <Point X="5" Y="0"/>
                                                <Point X="10" Y="5"/>
                                            </Polyline.Points>
                                        </Polyline>

                                        <TextBlock Text="{Binding Counter}" HorizontalAlignment="Center"
                                                   VerticalAlignment="Top" FontSize="11" x:Name="BlockCounter"/>

                                        <Polyline Fill="Black" SnapsToDevicePixels="True"  RenderOptions.EdgeMode="Aliased" Visibility="{Binding DownArrowVisible}">
                                            <Polyline.Points>
                                                <Point X="0" Y="0"/>
                                                <Point X="10" Y="0"/>
                                                <Point X="5" Y="5"/>
                                            </Polyline.Points>
                                        </Polyline>
                                    </StackPanel>

                                </Grid>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <Grid x:Name="GridLoadMessage" Visibility="Collapsed">
            <Border Background="Black" Opacity=".2"/>
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="LOADING..." VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                <Button x:Name="ButtonBreakLoad" Content="Cancel" Margin="0,10,0,0" Click="ButtonCancelExecutingSql_OnClick"/>
            </StackPanel>

        </Grid>
        <Border x:Name="BorderError" VerticalAlignment="Bottom" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="4,4,0,0" Padding="5"
                Visibility="Collapsed" Background="Pink" Margin="3,0,3,0" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased">
            <Grid>
                <TextBlock x:Name="LabelError" Foreground="{x:Static SystemColors.InfoTextBrush}" TextOptions.TextFormattingMode="Display" />
                <Image Source="../Resources/cancel.png" HorizontalAlignment="Right" VerticalAlignment="Center" Stretch="None" 
                       Cursor="{x:Static Cursors.Hand}" MouseUp="CloseImage_OnMouseUp"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
