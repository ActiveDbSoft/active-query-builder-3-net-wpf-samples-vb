<UserControl x:Class="Connection.FrameConnection.XmlFileFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel>
            <TextBlock Text="Create new XML file using the Load Metadata button or specify previously saved XML file." TextWrapping="Wrap"/>
            <Button x:Name="btnLoadMetadata" Content="Load Metadata" Width="193" Height="23" Margin="0,8,0,0" />
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="XML File:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" Height="20" VerticalAlignment="Center" x:Name="tbXmlFile"/>
                <Button Content="..." Grid.Column="2" Width="25" Height="23" VerticalAlignment="Center" Margin="8,0,0,0" x:Name="btnBrowse" Click="BtnBrowse_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
