<Window x:Class="Windows.QueryStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Query Statistics" Height="425" Width="421" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" x:Name="textBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Margin="0,12,0,0">
            <Button Content="OK" Width="75" Height="23" x:Name="ButtonOk" Click="ButtonOk_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
