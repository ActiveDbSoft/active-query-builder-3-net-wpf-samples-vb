<Window x:Class="AutoGeneratedProperties.QueryPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Query Builder Properties" Height="543" Width="727"
        Background="{x:Static SystemColors.ControlBrush}" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="StyleHeaderCaptionTree">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,5"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="ItemTreeStyle">
            <Setter Property="Margin" Value="10,3,0,3"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HotTrackBrush}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style BasedOn="{StaticResource ItemTreeStyle}" x:Key="ItemTreeLevelOneStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style BasedOn="{StaticResource ItemTreeStyle}" x:Key="ItemTreeLevelTwoStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="20,2,2,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="White" Margin="10,10,10,0">
            <TextBlock Text="Query Properties" FontFamily="Arial" FontSize="12pt" FontWeight="Bold" Foreground="CornflowerBlue" VerticalAlignment="Center" Margin="15,0,0,0" HorizontalAlignment="Left"/>

        </Grid>
        <TabControl Grid.Row="1" Margin="10,0,10,10"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="General options">
                <Grid  Background="White" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="11,0,0,0">
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="SQL Generation Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkGeneration"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Behavior Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkBehavior"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="DatabaseSchemaView Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkSchemaView"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="DesignPane Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkDesignPane"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Visual Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkVisual"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="AddObject Dialog Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkAddObject"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Datasource Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkDatasource"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Metadata Loading Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkMetadataLoading"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Metadata Structure Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkMetadataStructure"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="QueryColumnsList Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkQueryColumnList"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="QueryNavBar Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkQueryNavBar"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="UserInterface Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkUserInterface"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Text Editor Visual Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkTextEditor"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Text Editor SQL Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkTextEditorSql"/>
                        <TextBlock Style="{StaticResource ItemTreeStyle}" Text="Expression Editor Options" MouseLeftButtonUp="GeneralLinkClick" x:Name="linkExpressionEditor"/>
                    </StackPanel>
                    <Border Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" BorderThickness="0,0,1,0" BorderBrush="Gray" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased" Margin="0,10"/>
                    <ScrollViewer Grid.Column="1">
                        <Grid x:Name="gridGeneral"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="SQL Formatting options">
                <Grid>
                    <Grid  Background="White" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="11,0,0,0">
                            <TextBlock Text="SQL Option" Style="{StaticResource StyleHeaderCaptionTree}"/>

                            <TextBlock Style="{StaticResource ItemTreeLevelOneStyle}" Text="Main query" x:Name="LinkMain" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Common" x:Name="LinkMainCommon" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Expressions" x:Name="LinkMainExpressions" MouseUp="FormattingLinkClick"/>

                            <TextBlock Style="{StaticResource ItemTreeLevelOneStyle}" Text="CTE query" x:Name="LinkCte" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Common" x:Name="LinkCteCommon" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Expressions" x:Name="LinkCteExpressions" MouseUp="FormattingLinkClick"/>

                            <TextBlock Style="{StaticResource ItemTreeLevelOneStyle}" Text="Derived query" x:Name="LinkDerived" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Common" x:Name="LinkDerivedCommon" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Expressions" x:Name="LinkDerivedExpressions" MouseUp="FormattingLinkClick"/>

                            <TextBlock Style="{StaticResource ItemTreeLevelOneStyle}" Text="Expression query" x:Name="LinkExpression" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Common" x:Name="LinkExpressionCommon" MouseUp="FormattingLinkClick"/>
                            <TextBlock Style="{StaticResource ItemTreeLevelTwoStyle}" Text="Expressions" x:Name="LinkExpressionExpressions" MouseUp="FormattingLinkClick"/>
                        </StackPanel>
                        <Border Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" BorderThickness="0,0,1,0" BorderBrush="Gray" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased" Margin="0,10"/>
                        <ScrollViewer Grid.Column="1">
                            <Grid x:Name="gridFormatting"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,10,10">
            <Button Content="Close"  Width="75" Height="23" Margin="0,0,5,0" x:Name="buttonCancel" Click="ButtonCancel_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
