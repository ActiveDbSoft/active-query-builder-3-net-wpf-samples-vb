<UserControl x:Class="AutoGeneratedProperties.Tabs.SubQueryTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:common1="clr-namespace:GeneralAssembly.Common;assembly=GeneralAssembly_pro.wpf.vb"
             mc:Ignorable="d" 
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="TabStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>


        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox x:Name="GroupBoxControl" Style="{StaticResource GroupBoxDefaultStyle}" Header="Sub-queries format options">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition MinWidth="{StaticResource MinWidthColumnDescription}"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Style="{StaticResource TextBlockDefaultStyle}" Text="Sub-query indent:"
                               x:Name="TextBlockCaptionUpDown"/>
                    <common1:CustomUpDown Width="{StaticResource WidthEditorControl}" VerticalAlignment="Center" Margin="20,0,0,0"
                                         x:Name="UpDownSubQueryIndent"
                                         ValueChanged="UpDownSubQueryIndent_OnValueChanged"/>
                </StackPanel>

                <CheckBox Style="{StaticResource CheckBoxListStyle}" Content="Start subqueries from new lines"
                          x:Name="CheckBoxStartSubQueriesNewLine"
                          Checked="CheckBoxStartSubQueriesNewLine_OnChanged"
                          Unchecked="CheckBoxStartSubQueriesNewLine_OnChanged"/>
                <CheckBox Style="{StaticResource CheckBoxListStyle}" Content="Use the same formatting as for the main query"
                          x:Name="CheckBoxUseFormattingMainQuery"
                          Checked="CheckBoxUseFormattingMainQuery_OnChanged"
                          Unchecked="CheckBoxUseFormattingMainQuery_OnChanged"/>
            </StackPanel>

            <TextBlock Style="{StaticResource TextBlockDescriptionStyle}" Grid.Column="2"  Margin="0" x:Name="TextBlockDescription">
                <TextBlock.Inlines>
                    <Run>Sub-Queries format options determine</Run>
                    <LineBreak/>
                    <Run>the layout of sub-queries used in expressions of query.</Run>
                </TextBlock.Inlines>
            </TextBlock>
        </Grid>
    </GroupBox>
</UserControl>
