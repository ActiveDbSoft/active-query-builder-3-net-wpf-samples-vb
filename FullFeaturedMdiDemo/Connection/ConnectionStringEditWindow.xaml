<Window x:Class="Connection.ConnectionStringEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection String" Height="300" Width="300">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" x:Name="tbConnectionString"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="73" Height="23" Content="OK" Margin="0,0,8,0" Click="ButtonBaseOk_OnClick"/>
            <Button Width="73" Height="23" Content="Cancel" Click="ButtonBaseClose_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
