<UserControl x:Class="Connection.FrameConnection.OLEDBConnectionFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <TextBlock Text="Enter connection string:" Margin="0,0,0,8" Grid.Row="0" HorizontalAlignment="Left"/>
        <Button Grid.Row="0" HorizontalAlignment="Right" Height="23" Width="87" Content="Build..." x:Name="btnBuild" Click="BtnBuild_OnClick"/>
        <TextBox Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="2,2,2,33" x:Name="tbConnectionString" TextChanged="tbConnectionString_TextChanged"/>
        <Button x:Name="btnTest" Content="Test connection and detect syntax" HorizontalAlignment="Right" Height="23" Margin="0,0,2,5" Grid.Row="1" VerticalAlignment="Bottom" Width="198" Click="btnTest_Click"/>
    </Grid>
</UserControl>
